<Window
	x:Class="BlockChainBasedInvoiceManagementSystemUi.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:BlockChainBasedInvoiceManagementSystemUi"
	mc:Ignorable="d"
	ResizeMode="NoResize"
	Title="Block chain based invoice management system" Height="400" Width="575">
	<Window.CommandBindings>
		<CommandBinding Command="local:CustomCommands.Exit" Executed="ExitCmd_OnExecuted" />
		<CommandBinding Command="local:CustomCommands.Options" Executed="OptionsCmd_OnExecuted" />
		<CommandBinding Command="local:CustomCommands.GenerateKeys" Executed="GenerateKeysCmd_OnClick"
		                CanExecute="GenerateKeysCmd_OnCanExecute" />
	</Window.CommandBindings>
	<Grid>
		<Menu VerticalAlignment="Top" FontSize="14">
			<MenuItem Header="File">
				<MenuItem Command="local:CustomCommands.GenerateKeys" />
				<Separator />
				<MenuItem Command="local:CustomCommands.Options" />
				<Separator />
				<MenuItem Command="local:CustomCommands.Exit" />
			</MenuItem>
		</Menu>
	</Grid>
</Window>